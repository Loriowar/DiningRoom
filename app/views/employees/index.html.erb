<h1>Список сотрудников</h1>

<% if @employees.blank? %>
    <div>
      Сотрудники отсутствуют
    </div>
<% else %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Фамилия</th>
      <th>Имя</th>
      <th>Отчество</th>
      <th>Дата приема</th>
      <th>Должность</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.id %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.first_name %></td>
        <td><%= employee.patronymic_name %></td>
        <td><%= employee.d_hiring %></td>
        <td><%= employee.appointment.name %></td>
        <td><%= link_to 'Показать', employee %></td>
        <td><%= link_to 'Редактировать', edit_employee_path(employee) %></td>
        <td><%= link_to 'Удалить', employee, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>

<%= link_to 'Новый сотрудник', new_employee_path %>
